<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/table"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/position1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                tools:text="x"
                android:textSize="150sp"
                android:layout_weight="0.33"
                android:tag="1"/>

            <Button
                android:id="@+id/position2"
                android:layout_margin="5dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="2"/>

            <Button
                android:id="@+id/position3"
                android:layout_width="0dp"
                android:layout_margin="5dp"

                android:layout_height="match_parent"
                tools:text="x"
                android:textSize="150sp"
                android:layout_weight="0.33"
                android:tag="3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/position4"
                android:layout_margin="5dp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="4"/>

            <Button
                android:id="@+id/position5"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="5"/>

            <Button
                android:id="@+id/position6"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="6"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33"
            android:orientation="horizontal">

            <Button
                android:id="@+id/position7"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="7"/>

            <Button
                android:id="@+id/position8"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="8"/>

            <Button
                android:id="@+id/position9"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="x"
                android:layout_weight="0.33"
                android:textSize="150sp"
                android:tag="9"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>