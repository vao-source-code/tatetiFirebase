<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFA000</item>
        <item name="colorPrimaryVariant">#2C384A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFA000</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>


    <style name="CustomToolbarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">#FF0000</item>
        <item name="android:titleTextColor">#FFFFFF</item>
    </style>

</resources>
